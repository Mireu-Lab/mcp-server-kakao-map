{
  "name": "mcp-server-kakao-map",
  "description": "Kakao Map MCP server",
  "version": "0.0.1",
  "author": "cgoinglove",
  "license": "MIT",
  "type": "module",
  "homepage": "https://github.com/cgoinglove/mcp-server-kakao-map",
  "bugs": "https://github.com/cgoinglove/mcp-server-kakao-map/issues",
  "bin": {
    "mcp-server-kakao-map": "dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc && shx chmod +x dist/*.js",
    "watch": "tsc --watch",
    "prepare": "husky install && npm run build",
    "test": "vitest",
    "test:server": "npm run build && npx @modelcontextprotocol/inspector node dist/index.js",
    "lint-staged": "lint-staged",
    "format": "prettier --write ./**/*.ts",
    "type-check": "tsc --noEmit",
    "lint": "eslint ."
  },
  "engines": {
    "node": ">=18"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.7.0",
    "got": "^14.4.6",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.20.0",
    "@types/node": "^22.13.0",
    "eslint": "^9.20.0",
    "globals": "^15.14.0",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "prettier": "^3.5.3",
    "shx": "^0.3.4",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.24.0"
  },
  "prettier": {
    "printWidth": 120,
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "quoteProps": "as-needed",
    "jsxSingleQuote": false,
    "trailingComma": "es5",
    "bracketSpacing": true,
    "bracketSameLine": false,
    "arrowParens": "always",
    "endOfLine": "lf",
    "embeddedLanguageFormatting": "auto"
  }
}
